<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#c2d2ed"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item
                android:bottom="5px"
                >
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#abcbff"
                        android:endColor="#8ab7ff"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="#fff"
                        />
                    <corners
                        android:radius="20dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>